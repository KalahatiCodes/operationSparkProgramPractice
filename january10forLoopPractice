// Create a for loop that will print the numbers 0-9 print to the console
// initialize i at 0, make the condition that i must be below 10, and i will increment by 1
for (var i = 0; i < 10; i++){
  console.log(i)
}

/* 
#4: Using a for-loop, log all elements in the colors array. PSEUDOCODE
Start: 0 (0th Index)
Stop (Including): colors.length - 1 (<=)
OR
Stop: colors.length (<)
*/
var colors = ['red', 'orange', 'yellow', 'green', 'blue'];
for (let i = 0; i < colors.length; i++){
  console.log(colors[i]);
}


// #5: Using a for-loop console.log all of the values in our months array, IN REVERSE. PSEUDOCODE
// Start: Dec, months.length - 1
// End: Jan, 0th Index
var months = ['January', 'Febuary', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
// start/initialize index i at december using months.length -1
// decrement by 1 until the array gets to January at index 0
for (let i = months.length - 1; i >= 0 ; i--){
// console log months so that each month within the array prints (in reverse)
  console.log(months[i]);
}
