// if statement example
// declare a variable season and assign it a value
var season = 'Winter';

//if season strictly equals Spring
if (season === 'Spring') {
  console.log('take your allergy medicine');
}
// initialize two variables x and y
var x = 9;
var y = 65;

// if y is divisible by x
if (y % x === 0) {
  // print yes! to the console
  console.log('yes!');
}


// if y is NOT divisible by x
if (y % x !== 0) {
  // print yes! to the console
  console.log('yes! not divisible');
}

